# swap CTRL and ALT
xkbcomp - $DISPLAY <<EOF
xkb_keymap {
	xkb_keycodes  {
	    include "evdev+aliases(qwerty)"

	    <LALT> = 37;
	    <LCTL> = 64;

	    <RCTL> = 108;
	    <RALT> = 105;

	    alias <ALGR> = <RALT>; };
	xkb_types     { include "complete" };
	xkb_compat    { include "complete" };
	xkb_symbols   { include "pc+us+ru:2+inet(evdev)+capslock(grouplock)+compose(prsc)" };
	xkb_geometry  { include "pc(pc105)" };
};
EOF
